{
    "version": "0.1",
    "sections": [
        {
            "name": "General",
            "fields": [
                {
                    "name": "equations",
                    "type": "str",
                    "selectables": ["euler", "shallow_water"]
                },
                {
                    "name": "depth_approx",
                    "type": "str",
                    "selectables": ["deep", "shallow"],
                    "default": "deep",
                    "dependency": {
                        "name": "equations",
                        "values": ["euler"]
                    }
                }
            ]
        },
        {
            "name": "System",
            "fields": [
                {
                    "name": "desired_device",
                    "type": "str",
                    "selectables": ["cpu", "cuda"],
                    "default": "cpu",
                    "description": "Physical backend to run the computation on"
                },
                {
                    "name": "cuda_devices",
                    "type": "list-int",
                    "default": [],
                    "dependency": {
                        "name": "desired_device",
                        "values": ["cuda"]
                    },
                    "description": "List of Nvidia physical device to use"
                }
            ]
        },
        {
            "name": "Test_case",
            "fields": [
                {
                    "name": "case_number",
                    "type": "int",
                    "default": -1
                },
                {
                    "name": "matsuno_wave_type",
                    "type": "str",
                    "dependency": {
                        "name": "case_number",
                        "values": [9]
                    }
                },
                {
                    "name": "matsuno_amp",
                    "type": "float",
                    "dependency": {
                        "name": "case_number",
                        "values": [9]
                    }
                },
                {
                    "name": "bubble_theta",
                    "type": "float",
                    "default": 0.0
                },
                {
                    "name": "bubble_rad",
                    "type": "float",
                    "default": 0.0
                }
            ]
        },
        {
            "name": "Time_integration",
            "fields": [
                {
                    "name": "dt",
                    "type": "float",
                    "min": 0.0
                },
                {
                    "name": "t_end",
                    "type": "float"
                },
                {
                    "name": "time_integrator",
                    "type": "str"
                },
                {
                    "name": "tolerance",
                    "type": "float"
                },
                {
                    "name": "starting_step",
                    "type": "int",
                    "default": 0
                },
                {
                    "name": "exponential_solver",
                    "type": "str",
                    "default": "pmex",
                    "selectables": ["pmex", "kiops", "exode", "cwy_1s", "cwy_ne", "cwy_ne1s", "dcgs2", "icwy_1s",
                                    "icwy_neiop", "icwy_ne", "icwy_ne1s", "kiops_ne", "pmex_1s", "pmex_ne1s"]
                },
                {
                    "name": "exode_method",
                    "type": "str",
                    "default": "BS3(2)",
                    "selectables": [ "BS3(2)", "DP5(4)", "M4(3)", "KC3(2)", "EXLRK3(2)", "EXLRK4(3)", "F14(12)", "DP8(7)", "F10(8)" ]
                },
                {
                    "name": "exode_controller",
                    "type": "str",
                    "default": ""
                },
                {
                    "name": "krylov_size",
                    "type": "int",
                    "default": 1,
                    "min": 0
                },
                {
                    "name": "jacobian_method",
                    "type": "str",
                    "default": "complex",
                    "selectables": ["complex", "fd"]
                },
                {
                    "name": "linear_solver",
                    "type": "str",
                    "default": "fgmres",
                    "selectables": ["fgmres", "gcrot"]
                },
                {
                    "name": "verbose_solver",
                    "type": "int",
                    "default": 0
                },
                {
                    "name": "gmres_restart",
                    "type": "int",
                    "default": 20,
                    "min": 1
                }
            ]
        },
        {
            "name": "Spatial_discretization",
            "fields": [
                {
                    "name": "num_solpts",
                    "type": "int",
                    "min": 1
                },
                {
                    "name": "num_elements_horizontal",
                    "type": "int",
                    "min": 1
                },
                {
                    "name": "num_elements_vertical",
                    "type": "int",
                    "min": 1,
                    "default": 1
                },
                {
                    "name": "filter_apply",
                    "type": "bool",
                    "default": false
                },
                {
                    "name": "filter_order",
                    "type": "int",
                    "default": 16,
                    "dependency": {
                        "name": "filter_apply",
                        "values": [true]
                    }
                },
                {
                    "name": "filter_order",
                    "type": "int",
                    "default": 0,
                    "dependency": {
                        "name": "filter_apply",
                        "values": [false]
                    }
                },
                {
                    "name": "filter_cutoff",
                    "type": "float",
                    "default": 0.25,
                    "dependency": {
                        "name": "filter_apply",
                        "values": [true]
                    }
                },
                {
                    "name": "filter_cutoff",
                    "type": "float",
                    "default": 0.0,
                    "dependency": {
                        "name": "filter_apply",
                        "values": [false]
                    }
                },
                {
                    "name": "expfilter_apply",
                    "type": "bool",
                    "default": false
                },
                {
                    "name": "expfilter_order",
                    "type": "int",
                    "dependency": {
                        "name": "expfilter_apply",
                        "values": [true]
                    }
                },
                {
                    "name": "expfilter_order",
                    "type": "int",
                    "default": 0,
                    "dependency": {
                        "name": "expfilter_apply",
                        "values": [false]
                    }
                },
                {
                    "name": "expfilter_cutoff",
                    "type": "float",
                    "dependency": {
                        "name": "expfilter_apply",
                        "values": [true]
                    }
                },
                {
                    "name": "expfilter_cutoff",
                    "type": "float",
                    "default": 0.0,
                    "dependency": {
                        "name": "expfilter_apply",
                        "values": [false]
                    }
                },
                {
                    "name": "expfilter_strength",
                    "type": "float",
                    "dependency": {
                        "name": "expfilter_apply",
                        "values": [true]
                    }
                },
                {
                    "name": "expfilter_strength",
                    "type": "float",
                    "default": 0.0,
                    "dependency": {
                        "name": "expfilter_apply",
                        "values": [false]
                    }
                },
                {
                    "name": "apply_sponge",
                    "type": "bool",
                    "default": false
                },
                {
                    "name": "sponge_tscale",
                    "type": "float",
                    "default": 1.0
                },
                {
                    "name": "sponge_zscale",
                    "type": "float",
                    "default": 0.0
                }
            ]
        },
        {
            "name": "Grid",
            "fields": [
                {
                    "name": "grid_type",
                    "type": "str",
                    "selectables": ["cubed_sphere", "cartesian2d"]
                },
                {
                    "name": "discretization",
                    "type": "str",
                    "default": "dg",
                    "selectables": ["dg", "fv"]
                },
                {
                    "name": "lambda0",
                    "type": "float",
                    "dependency": {
                        "name": "grid_type",
                        "values": ["cubed_sphere"]
                    }
                },
                {
                    "name": "phi0",
                    "type": "float",
                    "dependency": {
                        "name": "grid_type",
                        "values": ["cubed_sphere"]
                    }
                },
                {
                    "name": "alpha0",
                    "type": "float",
                    "dependency": {
                        "name": "grid_type",
                        "values": ["cubed_sphere"]
                    }
                },
                {
                    "name": "ztop",
                    "type": "float",
                    "default": 0.0,
                    "dependency": {
                        "name": "grid_type",
                        "values": ["cubed_sphere"]
                    }
                },
                {
                    "name": "x0",
                    "type": "float",
                    "dependency": {
                        "name": "grid_type",
                        "values": ["cartesian2d"]
                    }
                },
                {
                    "name": "x1",
                    "type": "float",
                    "dependency": {
                        "name": "grid_type",
                        "values": ["cartesian2d"]
                    }
                },
                {
                    "name": "z0",
                    "type": "float",
                    "dependency": {
                        "name": "grid_type",
                        "values": ["cartesian2d"]
                    }
                },
                {
                    "name": "z1",
                    "type": "float",
                    "dependency": {
                        "name": "grid_type",
                        "values": ["cartesian2d"]
                    }
                }
           ]
        },
        {
            "name": "Preconditioning",
            "fields": [
                {
                    "name": "preconditioner",
                    "type": "str",
                    "default": "none",
                    "selectables": ["none", "fv", "fv-mg", "p-mg", "lu", "ilu"]
                },
                {
                    "name": "precond_flux",
                    "type": "str",
                    "default": "ausm",
                    "selectables": ["ausm", "upwind", "rusanov"]
                },
                {
                    "name": "num_mg_levels",
                    "type": "int",
                    "default": 1,
                    "min": 1,
                    "dependency": {
                        "name": "preconditioner",
                        "values": ["fv-mg", "p-mg"]
                    }
                },
                {
                    "name": "precond_tolerance",
                    "type": "float",
                    "default": 1e-1
                },
                {
                    "name": "num_pre_smoothe",
                    "type": "int",
                    "default": 1,
                    "min": 0
                },
                {
                    "name": "num_post_smoothe",
                    "type": "int",
                    "default": 1,
                    "min": 0
                },
                {
                    "name": "mg_smoother",
                    "type": "str",
                    "default": "exp",
                    "selectables": ["exp", "kiops", "erk3", "erk1", "ark3"]
                },
                {
                    "name": "exp_smoothe_spectral_radii",
                    "type": "list-float",
                    "default": [2.0],
                    "dependency": {
                        "name": "mg_smoother",
                        "values": ["exp"]
                    }
                },
                {
                    "name": "exp_smoothe_num_iters",
                    "type": "list-int",
                    "default": [4],
                    "dependency": {
                        "name": "mg_smoother",
                        "values": ["exp"]
                    }
                },
                {
                    "name": "mg_solve_coarsest",
                    "type": "bool",
                    "default": false
                },
                {
                    "name": "kiops_dt_factor",
                    "type": "float",
                    "default": 1.1
                },
                {
                    "name": "verbose_precond",
                    "type": "int",
                    "default": 0
                },
                {
                    "name": "dg_to_fv_interp",
                    "type": "str",
                    "default": "lagrange",
                    "selectables": ["l2-norm", "lagrange"]
                },
                {
                    "name": "pseudo_cfl",
                    "type": "float",
                    "default": 1.0
                }
            ]
        },
        {
            "name": "Output_options",
            "fields": [
                {
                    "name": "stat_freq",
                    "type": "int",
                    "default": 0,
                    "description": "Frequency in timesteps at which to print block stats"
                },
                {
                    "name": "output_freq",
                    "type": "int",
                    "default": 0,
                    "description": "Frequency in timesteps at which to store the solution"
                },
                {
                    "name": "save_state_freq",
                    "type": "int",
                    "default": 0,
                    "description": "Frequency in timesteps at which to save the state vector"
                },
                {
                    "name": "store_solver_stats",
                    "type": "bool",
                    "default": false,
                    "description": "Whether to store solver stats (at every timestep)"
                },
                {
                    "name": "output_dir",
                    "type": "case-sensitive-str",
                    "default": "results",
                    "description": "Directory where to store all the output"
                },
                {
                    "name": "base_output_file",
                    "type": "case-sensitive-str",
                    "default": "out",
                    "description": "Name of file where to store the solution"
                },
                {
                    "name": "solver_stats_file",
                    "type": "case-sensitive-str",
                    "default": "solver_stats.db",
                    "description": "SQL file where to store statistics for this run"
                },
                {
                    "name": "store_total_time",
                    "type": "bool",
                    "default": false,
                    "description": "Whether to output total runtime in seconds to a file"
                }
            ]
        }
    ]
}
